<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.TideCompass" parent="Base.Theme.TideCompass">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@color/bottom_nav</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <!-- Customize the bottom navigation bar indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/nav_item</item>
    </style>
</resources>